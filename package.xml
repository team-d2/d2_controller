<?xml version="1.0"?>
<package format="3">
  <name>d2_controller</name>
  <version>0.1.0</version>
  <description>controller of d2</description>
  <maintainer email="miyajima-d@roboken.cs.tsukuba.ac.jp">miyajima-d</maintainer>
  <license>Apache-2.0</license>

  <buildtool_depend condition="$ROS_VERSION == 2">ament_cmake</buildtool_depend>
  <buildtool_depend condition="$ROS_VERSION == 2">rosidl_default_generators</buildtool_depend>

  <depend condition="$ROS_VERSION == 2">geometry_msgs</depend>
  <depend condition="$ROS_VERSION == 2">nav_msgs</depend>
  <depend condition="$ROS_VERSION == 2">rclcpp</depend>
  <depend condition="$ROS_VERSION == 2">rclcpp_components</depend>
  <depend condition="$ROS_VERSION == 2">tf2</depend>
  <depend condition="$ROS_VERSION == 2">tf2_geometry_msgs</depend>

  <build_depend condition="$ROS_VERSION == 2">ament_cmake_auto</build_depend>
  <build_depend condition="$ROS_VERSION == 2">pcl_ros</build_depend>
  
  <exec_depend condition="$ROS_VERSION == 2">ros2launch</exec_depend>
  <exec_depend condition="$ROS_VERSION == 2">rosidl_default_runtime</exec_depend>
  <exec_depend condition="$ROS_VERSION == 2">geometry_merger</exec_depend>

  <test_depend condition="$ROS_VERSION == 2">ament_clang_format</test_depend>
  <test_depend condition="$ROS_VERSION == 2">ament_cmake_gtest</test_depend>
  <test_depend condition="$ROS_VERSION == 2">ament_lint_auto</test_depend>
  <test_depend condition="$ROS_VERSION == 2">ament_lint_common</test_depend>

  <member_of_group condition="$ROS_VERSION == 2">rosidl_interface_packages</member_of_group>

  <export>
    <build_type condition="$ROS_VERSION == 2">ament_cmake</build_type>
  </export>
</package>